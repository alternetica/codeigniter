RewriteEngine On
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ /codeigniter/index.php/$1 [L]
    ErrorDocument 404 /codeigniter/index.php


